    "screenshot:spice": "node src/screenshot-pages.js --input ../../spice-scene-workbook/printable/spice-scene-workbook.html --output ../../spice-scene-workbook/printable/screenshots",
    "screenshot:chapter-logs": "node src/screenshot-pages.js --input ../../romantasy-analysis-guide/printable/chapter-logs-supplement-LATEST.html --output ../../romantasy-analysis-guide/printable/screenshots-chapter-logs"
  },
  "optionalDependencies": {
    "puppeteer": "^24.2.1"
