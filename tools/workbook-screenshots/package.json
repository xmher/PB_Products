{
  "name": "@plotbrew/workbook-screenshots",
  "version": "1.0.0",
  "description": "Screenshot every page of an HTML workbook as individual PNGs â€” uses wkhtmltopdf + pdftoppm",
  "main": "src/screenshot-pages.js",
  "scripts": {
    "screenshot": "node src/screenshot-pages.js",
    "screenshot:romantasy": "node src/screenshot-pages.js --input ../../romantasy-analysis-guide/printable/romantasy-analysis-guide.html --output ../../romantasy-analysis-guide/printable/screenshots",
